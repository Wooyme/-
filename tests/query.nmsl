load "VertxLoad.nmsl";

fn main(){
    stop = {stop:false};
    vertx = Vertx.vertx();
    client = vertx jdbc;
    query(client);
    while(!stop.stop){
        sleep(1000);
    }
}

fn query(client){
    client.query("SELECT COLUMN_NAME FROM information_shcema.columns WHERE table_schema='energy' AND table_name='decd'"
        ,{handle:@result} Handler);
    await @result->(this,ar);
    if(ar.succeeded()){
        ar.result().getRows() forEach {v:
            println(v.COLUMN_NAME);
        };
    }else{
	println("Failed");
        println(ar.cause().getMessage());
    }
}

fn jdbc(vertx){
    config = Json();
    config.url = "jdbc:mysql://link.hdussta.cn/energy";
    config.driver_class = "com.mysql.cj.jdbc.Driver";
    config.user = "root";
    config.password = "Admin88888";
    return JDBC.createShared(vertx,config);
}
